<Window x:Class="Labb3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Labb3"
        xmlns:views="clr-namespace:Labb3.Views"
        mc:Ignorable="d"
        d:Height="500" d:Width="400"
        Title="MainWindow" Height="450" Width="800" FontSize="24">
    
    <Window.InputBindings>
        <KeyBinding Key="P" Modifiers="Ctrl" Command="{Binding ShowPlayerViewCommand}"/>
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{Binding ShowConfigurationViewCommand}"/>
        <KeyBinding Key="Enter" Modifiers="Alt" Command="{Binding ToggleFullscreenCommand}"/>
        <KeyBinding Key="F4" Modifiers="Alt" Command="{Binding ExitCommand}"/>
    </Window.InputBindings>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <views:MenuView Grid.Row="0" />

        <views:PlayerView Grid.Row="1" Visibility="{Binding VisiblePlayerView}"/>
        <views:ConfigurationView Grid.Row="1" Visibility="{Binding VisibilityConfigurationView}"/>
        <views:QuizCompleteView Grid.Row="1" Visibility="{Binding VisibilityQuizCompleteView}"/>
    </Grid>
</Window>
