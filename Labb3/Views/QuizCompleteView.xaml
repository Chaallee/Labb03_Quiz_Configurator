<UserControl x:Class="Labb3.Views.QuizCompleteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:local="clr-namespace:Labb3.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid DataContext="{Binding PlayerViewModel}">
        <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">


            <TextBlock Text="Quiz complete!" 
                       FontSize="48"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Foreground="DarkGreen"
                       Margin="0 0 0 20"/>

            <TextBlock Text="{Binding CompletionMessage}"
                       FontSize="32"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0 0 0 40"/>

            <Button Content="Back to Menu" 
                    Width="150"
                    Height="50"
                    FontSize="20"
                    Command="{Binding DataContext.ShowConfigurationViewCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
        </StackPanel>
    </Grid>
</UserControl>